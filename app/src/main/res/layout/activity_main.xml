<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="69dp"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="7dp">

        <Button
            android:id="@+id/btn_getCityByid"
            android:layout_width="77dp"
            android:layout_height="59dp"
            android:text="Get City Id"
            android:textSize="30px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />

        <Button
            android:id="@+id/btn_getWeatherbyCityId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Weather By Id"
            android:textSize="30px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <Button
            android:id="@+id/btn_getWeatherbyCityName"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Get Weather By City Name"
            android:textSize="30px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

    </LinearLayout>


    <EditText
        android:id="@+id/et_dataInput"
        android:layout_width="334dp"
        android:layout_height="38dp"
        android:hint="Enterfr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199"
        tools:ignore="MissingConstraints">

    </EditText>

    <ListView
        android:id="@+id/show_data"
        android:layout_width="392dp"
        android:layout_height="426dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_dataInput"


        app:layout_constraintVertical_bias="0.677"
        tools:ignore="MissingConstraints">


    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>




